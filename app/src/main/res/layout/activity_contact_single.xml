<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="main.snapmap.ContactSingleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SHARE OR REQUEST FOR LOCATION"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE MY LOCATION"
        android:id="@+id/btnShareLocation"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView14"
        android:layout_alignRight="@+id/btnRequestLocation"
        android:layout_alignEnd="@+id/btnRequestLocation"
        android:layout_alignLeft="@+id/btnRequestLocation"
        android:layout_alignStart="@+id/btnRequestLocation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST FOR LOCATION"
        android:id="@+id/btnRequestLocation"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/btnShareLocation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
